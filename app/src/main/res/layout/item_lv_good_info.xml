<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="1500px"
              android:layout_height="100px"
              android:orientation="horizontal">



    <TextView
        android:id="@+id/tv_barcode"
        android:layout_width="200px"
        android:layout_height="100px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="70px"
        android:gravity="center"
        android:text="商品条码"
        android:textSize="32px"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="100px"
        android:layout_marginLeft="150px"
        android:layout_width="150px"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="140px"
        android:layout_height="100px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="150px"
        android:gravity="center"
        android:text="商品分类"
        android:textSize="32px"/>

    <TextView
        android:id="@+id/tv_spec"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="150px"
        android:gravity="center"
        android:text="规格"
        android:textSize="32px"/>

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="80px"
        android:layout_height="100px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="120px"
        android:gravity="center"
        android:text="单位"
        android:textSize="32px"/>

    <TextView
        android:id="@+id/tv_supplyer"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30px"
        android:gravity="center"
        android:text="供应商"
        android:textSize="32px"/>

    <TextView
        android:id="@+id/tv_sale_money"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30px"
        android:gravity="center"
        android:text="零售价"
        android:textSize="32px"/>

    <TextView
        android:textColor="#ff4351"
        android:id="@+id/tv_keep"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="100px"
        android:layout_marginLeft="20px"
        android:layout_width="300px"
        android:text="保质期"
        android:textSize="32px"/>

    <TextView
        android:id="@+id/tv_intime"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="100px"
        android:layout_marginLeft="60px"
        android:layout_width="300px"
        android:text="进货日期"
        android:textSize="32px"/>

    <TextView
        android:id="@+id/tv_income_money"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="90px"
        android:gravity="center"
        android:text="进货价"
        android:textSize="32px"/>

    <RelativeLayout
        android:gravity="center"
        android:layout_marginLeft="53px"
        android:layout_gravity="center_vertical"
        android:layout_width="160px"
        android:layout_height="100px">

        <ImageView
            android:id="@+id/iv_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/saleonline"
            />

    </RelativeLayout>
</LinearLayout>